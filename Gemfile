source 'https://rubygems.org'

# default gems
gem 'rails', '4.2.4'
gem 'sass-rails', '~> 5.0'
gem 'uglifier', '>= 1.3.0'
gem 'jquery-rails'
gem 'turbolinks'
gem 'jbuilder', '~> 2.0'
gem 'rb-readline'

# Devise for login and the views with bootstrap
gem 'devise'
gem 'devise-bootstrap-views'

# bootstrap
gem 'twitter-bootstrap-rails', :git => 'git://github.com/seyhunak/twitter-bootstrap-rails.git'

# to show flash on notifications
gem 'unobtrusive_flash', github: "leonid-shevtsov/unobtrusive_flash"

# progress bar for ajax request
gem 'nprogress-rails'

# to fix problems with turbolinks
gem 'jquery-turbolinks'

# generate forms the easy way
gem 'formtastic'
gem 'formtastic-bootstrap'

# to change the default alert views
gem 'sweet-alert-confirm'

group :development, :test do
  gem 'byebug'
  gem 'spring'
  gem 'sqlite3'
  gem "letter_opener"
  gem "web-console"
  gem "better_errors"
end

group :production do
 gem 'pg'
 gem 'puma'
 gem 'rails_12factor'
end
